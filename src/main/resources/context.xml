<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">


    <!--        <context:component-scan base-package="org.exemple.firstspring"/>-->



    <bean class="org.exemple.firstspring.dao.implementation.ContactFileDao" id="contactDao">
        <constructor-arg index="0" value="C:/Users/Admin/Desktop/contacts.txt"/>
    </bean>

    <bean class="org.exemple.firstspring.dao.implementation.PersonFileDao" id="personDao">
        <constructor-arg index="0" value="C:/Users/Admin/Desktop/humans.txt"/>
    </bean>

    <bean class="org.exemple.firstspring.AddressBook" id="addressBook" >
        <constructor-arg index="0">
            <bean class="org.exemple.firstspring.dao.implementation.PersonFileDao"/>
        </constructor-arg>
        <constructor-arg index="1">
            <bean class="org.exemple.firstspring.dao.implementation.ContactFileDao"/>
        </constructor-arg>
    </bean>


</beans>